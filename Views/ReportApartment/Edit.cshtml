@model MvcCoreUploadAndDisplayImage_Demo.Models.ReportApartment

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ReportApartment</h4>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

           

            <div class="form-group">
                <label asp-for="ApartmentName" class="control-label"></label>
                <input asp-for="ApartmentName" class="form-control" />
                <span asp-validation-for="ApartmentName" class="text-danger"></span>
            </div>

           

            <div class="form-group">
                <label asp-for="ReportDescription" class="control-label"></label>
                <textarea asp-for="ReportDescription" class="form-control"></textarea>
                <span asp-validation-for="ReportDescription" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReportDate" class="control-label"></label>
                <input asp-for="ReportDate" class="form-control" type="datetime-local" value="@Model.ReportDate.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="ReportDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <input asp-for="IsResolved" class="form-check-input" />
                <label asp-for="IsResolved" class="form-check-label"></label>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
