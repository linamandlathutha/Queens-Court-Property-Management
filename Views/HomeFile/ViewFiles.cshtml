@model MvcCoreUploadAndDisplayImage_Demo.Models.LeaseAgreementViewModel

@{
    ViewData["Title"] = "Uploaded Lease Agreements";
}

<h2 class="text-center">Uploaded Lease Agreements</h2>

<div class="container mt-4">
    <!-- User Details -->
    <div class="row mb-4">
        <div class="col-md-6">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Detail</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Email</td>
                        <td>@Model.Email</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Uploaded Files -->
    <div class="row">
        <div class="col-md-12">
            <h4>List of Uploaded Files</h4>
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Files)
                    {
                        <tr>
                            <td>
                                <a href="@Url.Action("Download", "HomeFile", new { filename = item.Name })">
                                    @item.Name
                                </a>
                            </td>
                            <td>
                                <form asp-action="DeleteFile" asp-route-filename="@item.Name" method="post" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    /* General styles */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
        margin: 0;
        padding: 0;
    }

    h2 {
        color: #343a40;
        margin-top: 1rem;
        margin-bottom: 2rem;
        text-align: center;
    }

    .container {
        max-width: 900px;
        margin: auto;
    }

    .table {
        width: 100%;
        margin-bottom: 1rem;
        background-color: transparent;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #dee2e6;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }

    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
        color: #fff;
        padding: 0.375rem 0.75rem;
        border-radius: 0.375rem;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }
</style>
