@model List<History>

<h2>Manage Overdue Tenants</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Apartment Name</th>
            <th>Location</th>
            <th>Due Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tenant in Model)
        {
            <tr>
                <td>@tenant.Email</td>
                <td>@tenant.ApartmentName</td>
                <td>@tenant.Location</td>
                <td>@tenant.DueDate?.ToString("yyyy-MM-dd")</td>
                <td>@tenant.PaymentStatus</td>
                <td>
                    <form asp-action="SendEvictionNotice" asp-controller="Home" method="post">
                        <input type="hidden" name="historyId" value="@tenant.Id" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to send an eviction notice?');">
                            Send Eviction Notice
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
