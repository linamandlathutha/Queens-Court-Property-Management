@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient-primary text-white text-center rounded-top-4 py-4">
                    <h3 class="mb-0 font-weight-bold">@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-5">
                    <div class="alert alert-success text-center mb-4 rounded-3 shadow-sm p-4">
                        <i class="bi bi-envelope-check-fill" style="font-size: 2.5rem; color: #28a745;"></i>
                        <p class="mt-3 mb-0 lead">
                            A reset password link has been sent to your email. Please check your inbox and follow the instructions to reset your password. If you don't receive the email, check your spam folder.
                        </p>
                    </div>
                    <div class="text-center mt-4">
                        <a asp-area="" asp-controller="Apartment" asp-action="Home" class="btn btn-primary btn-lg px-4 py-2 rounded-pill shadow-sm">
                            <i class="bi bi-house-door-fill me-2"></i> Return to Home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Bootstrap Icons if not already included in your project -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet">

<!-- Custom CSS for additional styling -->
<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #1d4ed8, #2563eb);
    }

    .font-weight-bold {
        font-weight: 700;
    }

    .rounded-4 {
        border-radius: 1.5rem;
    }

    .rounded-top-4 {
        border-top-left-radius: 1.5rem;
        border-top-right-radius: 1.5rem;
    }
</style>
