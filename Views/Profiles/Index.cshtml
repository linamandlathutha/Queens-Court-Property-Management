@model MvcCoreUploadAndDisplayImage_Demo.Models.Profile


@{
    ViewData["Title"] = "Profile";
}

<h2 class="mb-4 text-center">Your Profile</h2>

<div class="card mx-auto" style="width: 24rem;">
    <div class="card-body">
        <h5 class="card-title text-center">Profile Information</h5>
        <hr />
        <p class="card-text"><strong>First Name:</strong> @Model.FirstName</p>
        <p class="card-text"><strong>Last Name:</strong> @Model.LastName</p>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <p class="card-text"><strong>Phone Number:</strong> @Model.PhoneNumber</p>

        <div class="text-center mt-4">
            <a href="@Url.Action("Edit", new { id = @Model.ProfileId })" class="btn btn-primary">
                Edit Profile
            </a>
        </div>
    </div>
</div>
