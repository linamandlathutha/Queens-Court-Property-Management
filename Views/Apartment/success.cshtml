@{
    ViewData["Title"] = "Payment Success";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="container">
        <div class="text-center mt-5">
            <i class="fas fa-check-circle success-icon"></i>
            <h1 class="display-4">Payment Successful!</h1>
            <p class="lead">Thank you for your payment. Your transaction was completed successfully.</p>
            <a href="@Url.Action("Home", "Apartment")" class="btn btn-primary">Return to Home</a>
        </div>
    </div>

    <!-- JavaScript includes -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>


<style>
    /* wwwroot/css/site.css */

    body {
        background-color: #f7f7f7;
    }

    .success-icon {
        font-size: 100px;
        color: #28a745; /* Green color for success */
        margin-bottom: 20px;
    }

    h1 {
        color: #333;
        margin-bottom: 20px;
    }

    .lead {
        color: #555;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

</style>